<%- include('../partials/header') %>


<section class="students-section">
  <h2>üë®‚Äçüéì All Students</h2>

  <% if (students.length === 0) { %>
    <p class="no-student-msg">‚ùå No students found.</p>
  <% } else { %>
    <div class="students-grid">
      <% students.forEach(student => { %>
        <div class="student-card">
          <h3><%= student.name %></h3>
          <p>Roll No: <%= student.roll_no %></p>
          <p>Class: <%= student.class %> | Section: <%= student.section %></p>
          <p>Performance: <%= student.performance %></p>
          <a href="/admin/section/<%= student.section %>/student/<%= student.roll_no %>" class="view-btn">üîç View</a>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: #0e1116;
    color: white;
    margin: 0;
  }

  .students-section {
    padding: 100px 20px;
    max-width: 1200px;
    margin: auto;
    text-align: center;
  }

  .students-section h2 {
    font-size: 2.5rem;
    margin-bottom: 30px;
    color: #00bfff;
    text-shadow: 0 0 5px #00bfff;
  }

  .no-student-msg {
    font-size: 1.2rem;
    color: #ccc;
    margin-top: 20px;
  }

  .students-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
  }

  .student-card {
    background: #1a1f27;
    padding: 20px;
    border-radius: 15px;
    width: 260px;
    box-shadow: 0 0 10px rgba(0,191,255,0.2);
    transition: transform 0.3s ease;
  }

  .student-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 15px rgba(0,191,255,0.4);
  }

  .student-card h3 {
    margin-bottom: 10px;
    color: #ffd700;
  }

  .student-card p {
    margin: 6px 0;
    color: #ccc;
  }

  .view-btn {
    display: inline-block;
    margin-top: 12px;
    padding: 6px 12px;
    border-radius: 6px;
    background: #00bfff;
    color: #fff;
    font-weight: bold;
    text-decoration: none;
    transition: 0.3s;
  }

  .view-btn:hover {
    background: #009fe3;
  }

  @media (max-width: 768px) {
    .student-card {
      width: 100%;
    }
  }
</style>

<%- include('../partials/footer') %>
