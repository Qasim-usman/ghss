<%- include('../partials/header') %>

<section class="students-section">
  <h2>üìò Class <%= classId %> - Section <%= section %></h2>

  <% if (students.length === 0) { %>
    <p class="no-student-msg">‚ùå No students found in this section.</p>
  <% } %>

  <div class="students-grid">
    <!-- üîµ Add Student Box -->
    <a href="/admin/<%= classId %>/section/<%= section %>/add" class="student-card add-card">
      <div class="add-icon">‚ûï</div>
      <p>Add Student</p>
    </a>

    <!-- üü¢ Show All Students -->
    <% students.forEach(student => { %>
      <div class="student-card">
        <h3><%= student.name %></h3>
        <p>üéì Roll No: <%= student.roll_no %></p>
        <p>üìö Class: <%= student.class %> | Section: <%= student.section %></p>
        <p>üìà Performance: <%= student.performance %></p>

        <div class="btn-group">
         <!-- ‚ùå WRONG (Missing slash before roll_no) -->


<!-- ‚úÖ CORRECT -->
<a href="/admin/<%= student.class %>/section/<%= student.section %>/<%= student.id %>/edit" class="edit-btn">üìù Edit</a>


          <form action="/admin/<%= student.class %>/section/<%= student.section %>/<%= student.id %>/delete" method="POST" style="display:inline;">
  <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this student?')">üóëÔ∏è Delete</button>
</form>

          <a href="/admin/section/<%= student.section %>/student/<%= student.roll_no %>" class="view-btn">üîç View Details</a>
        </div>
      </div>
    <% }) %>
  </div>
</section>

<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: #0e1116;
    color: white;
    margin: 0;
  }

  .students-section {
    padding: 105px 20px;
    max-width: 1200px;
    margin: auto;
    text-align: center;
  }

  .students-section h2 {
    font-size: 2.4rem;
    color: #00bfff;
    margin-bottom: 30px;
  }

  .no-student-msg {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 20px;
  }

  .students-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
  }

  .student-card {
    background: #1a1f27;
    padding: 25px;
    border-radius: 15px;
    width: 300px;
    box-shadow: 0 0 15px rgba(0,191,255,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .student-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 0 20px rgba(0,191,255,0.3);
  }

  .student-card h3 {
    color: #ffd700;
    margin-bottom: 10px;
  }

  .student-card p {
    margin: 5px 0;
    color: #ccc;
  }

  .btn-group {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 15px;
    flex-wrap: wrap;
  }

  .edit-btn, .delete-btn, .view-btn {
    padding: 8px 14px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    font-size: 0.95rem;
    cursor: pointer;
    text-decoration: none;
    transition: 0.3s ease;
  }

  .edit-btn {
    background-color: #f0ad4e;
    color: white;
  }

  .edit-btn:hover {
    background-color: #ec971f;
  }

  .delete-btn {
    background-color: #d9534f;
    color: white;
  }

  .delete-btn:hover {
    background-color: #c9302c;
  }

  .view-btn {
    background-color: #00bfff;
    color: white;
    box-shadow: 0 0 8px rgba(0,191,255,0.4);
  }

  .view-btn:hover {
    background-color: #009fe3;
    box-shadow: 0 0 12px rgba(0,191,255,0.7);
  }

  .add-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #00bfff;
    font-weight: bold;
    font-size: 1.2rem;
    text-decoration: none;
    border: 2px dashed #00bfff;
    background: #121821;
  }

  .add-icon {
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  .add-card:hover {
    background: #19202b;
    transform: scale(1.05);
    border-color: #009fe3;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .student-card, .add-card {
      width: 90%;
    }
  }
</style>

<%- include('../partials/footer') %>
