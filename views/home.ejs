<!-- GSAP Animations -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script>
  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".hero-overlay", {
    opacity: 0,
    y: 50,
    duration: 1.2
  });

  gsap.from(".card", {
    opacity: 0,
    y: 50,
    duration: 1,
    stagger: 0.2,
    scrollTrigger: {
      trigger: ".info-cards",
      start: "top 80%"
    }
  });

  gsap.from(".achievement-stats div", {
    opacity: 0,
    y: 30,
    duration: 1,
    stagger: 0.3,
    scrollTrigger: {
      trigger: ".achievements",
      start: "top 80%"
    }
  });

  gsap.from(".testimonial", {
    x: -50,
    opacity: 0,
    duration: 1,
    stagger: 0.3,
    scrollTrigger: {
      trigger: ".testimonials",
      start: "top 80%"
    }
  });

  // Removed GSAP animation from .event-card for Upcoming Events as per your request.
</script>

